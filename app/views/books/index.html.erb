<html>
  <head>
    <title>bookers</title>
    <meta charset="UTF-8"/>
  </head>

  <body>
    <h1>Books</h1>
    
    
   
    <table>
      <thead>
        <tr>
         <th>Title</th>
         <th>Body</th>
         <th colspan="3"></th>
        </tr>
      </thead>
      
      <% @books.each do |book| %>
        <tbody>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to("show","/books/#{book.id}") %></td>
        <td><%= link_to("edit","/books/#{book.id}/edit") %></td>
        <td><%= link_to("destroy","/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？") %> </td>
        </tr>
        </tbody>
      <% end %>
    </table>
        
<h2>New　book</h2>
<!-- form_with部分 -->
<%= form_with model:@Book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
  
</body>
</html>


